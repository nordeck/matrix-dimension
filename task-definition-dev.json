{
    "family": "phoenix-dimension-task-dev",
    "networkMode": "host",
    "containerDefinitions": [
        {
            "name": "phoenix-dimension", 
            "image": "751489943657.dkr.ecr.eu-central-1.amazonaws.com/phoenix-dimension:dev-latest",
            "logConfiguration": {
                "logDriver": "awslogs",
                "secretOptions": null,
                "options": {
                    "awslogs-group": "/ecs/phoenix-dimension-dev",
                    "awslogs-region": "eu-central-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "portMappings": [
                {
                    "containerPort": 8300, 
                    "hostPort": 8380, 
                    "protocol": "tcp"
                },
                {
                    "containerPort": 80,
                    "hostPort": 8180,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "dev"
                }
            ],
            "essential": true,
            "hostname": "phoenix-dimension-dev"
        }
    ], 
    "requiresCompatibilities": ["EC2"],
    "cpu": "128",
    "memory": "256"
}